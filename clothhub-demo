        let cart = [];
        let currentSection = 'home';
        let users = JSON.parse(localStorage.getItem('stylehub_users') || '[]');
        let currentUser = JSON.parse(localStorage.getItem('stylehub_current_user') || 'null');

        // Initialize the website
        document.addEventListener('DOMContentLoaded', function() {
            loadFeaturedProducts();
            loadSectionProducts();
            updateCartCount();
            updateUserInterface();
        });

        // User Management Functions
        function registerUser(event) {
            event.preventDefault();
            
            const name = document.getElementById('registerName').value;
            const email = document.getElementById('registerEmail').value.toLowerCase();
            const phone = document.getElementById('registerPhone').value;
            const password = document.getElementById('registerPassword').value;
            const errorDiv = document.getElementById('registerError');
            
            // Check if user already exists
            if (users.find(user => user.email === email)) {
                errorDiv.textContent = 'User with this email already exists!';
                errorDiv.classList.remove('hidden');
                return;
            }
            
            // Create new user
            const newUser = {
                id: Date.now(),
                name: name,
                email: email,
                phone: phone,
                password: password, // In real app, this should be hashed
                registrationDate: new Date().toISOString(),
                orders: []
            };
            
            users.push(newUser);
            localStorage.setItem('stylehub_users', JSON.stringify(users));
            
            // Auto login after registration
            currentUser = { ...newUser };
            delete currentUser.password; // Don't store password in current user
            localStorage.setItem('stylehub_current_user', JSON.stringify(currentUser));
            
            hideModal('registerModal');
            updateUserInterface();
            showNotification('Registration successful! Welcome to StyleHub!', 'success');
            
            // Download user data as Excel-like format
            downloadUserRegistrationData(newUser);
        }

        function loginUser(event) {
            event.preventDefault();
            
            const email = document.getElementById('loginEmail').value.toLowerCase();
            const password = document.getElementById('loginPassword').value;
            const errorDiv = document.getElementById('loginError');
            
            // Find user
            const user = users.find(u => u.email === email && u.password === password);
            
            if (!user) {
                errorDiv.textContent = 'Invalid email or password!';
                errorDiv.classList.remove('hidden');
                return;
            }
            
            // Login successful
            currentUser = { ...user };
            delete currentUser.password; // Don't store password in current user
            localStorage.setItem('stylehub_current_user', JSON.stringify(currentUser));
            
            hideModal('loginModal');
            updateUserInterface();
            showNotification(`Welcome back, ${user.name}!`, 'success');
        }

        function logout() {
            currentUser = null;
            localStorage.removeItem('stylehub_current_user');
            updateUserInterface();
            showNotification('Logged out successfully!', 'success');
        }

        function updateUserInterface() {
            const accountText = document.getElementById('accountText');
            const loggedOutMenu = document.getElementById('loggedOutMenu');
            const loggedInMenu = document.getElementById('loggedInMenu');
            const userWelcome = document.getElementById('userWelcome');
            const userEmail = document.getElementById('userEmail');
            
            if (currentUser) {
                // User is logged in
                accountText.textContent = currentUser.name.split(' ')[0];
                loggedOutMenu.classList.add('hidden');
                loggedInMenu.classList.remove('hidden');
                userWelcome.textContent = `Welcome, ${currentUser.name}!`;
                userEmail.textContent = currentUser.email;
            } else {
                // User is not logged in
                accountText.textContent = 'Account';
                loggedOutMenu.classList.remove('hidden');
                loggedInMenu.classList.add('hidden');
            }
        }

        function downloadUserRegistrationData(user) {
            const userData = {
                'Registration Date': new Date(user.registrationDate).toLocaleDateString(),
                'Full Name': user.name,
                'Email': user.email,
                'Phone': user.phone,
                'User ID': user.id
            };
            
            // Create CSV content
            const csvContent = Object.entries(userData)
                .map(([key, value]) => `${key},${value}`)
                .join('\n');
            
            // Create and download file
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `StyleHub_Registration_${user.name.replace(/\s+/g, '_')}_${Date.now()}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }

        function downloadUserData() {
            if (!currentUser) return;
            
            const fullUser = users.find(u => u.id === currentUser.id);
            if (!fullUser) return;
            
            const userData = {
                'User Information': '',
                'Name': fullUser.name,
                'Email': fullUser.email,
                'Phone': fullUser.phone,
                'Registration Date': new Date(fullUser.registrationDate).toLocaleDateString(),
                'User ID': fullUser.id,
                '': '',
                'Order History': '',
                'Total Orders': fullUser.orders.length
            };
            
            // Add order details
            fullUser.orders.forEach((order, index) => {
                userData[`Order ${index + 1} Date`] = new Date(order.date).toLocaleDateString();
                userData[`Order ${index + 1} Total`] = `$${order.total}`;
                userData[`Order ${index + 1} Status`] = order.status;
            });
            
            // Create CSV content
            const csvContent = Object.entries(userData)
                .map(([key, value]) => `${key},${value}`)
                .join('\n');
            
            // Create and download file
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `StyleHub_UserData_${currentUser.name.replace(/\s+/g, '_')}_${Date.now()}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
            
            showNotification('Your data has been downloaded!', 'success');
        }

        function loadProfileData() {
            if (!currentUser) return;
            
            const profileContent = document.getElementById('profileContent');
            profileContent.innerHTML = `
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Full Name</label>
                            <input type="text" value="${currentUser.name}" class="w-full px-3 py-2 border rounded-lg bg-gray-50" readonly>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                            <input type="email" value="${currentUser.email}" class="w-full px-3 py-2 border rounded-lg bg-gray-50" readonly>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Phone</label>
                            <input type="tel" value="${currentUser.phone || 'Not provided'}" class="w-full px-3 py-2 border rounded-lg bg-gray-50" readonly>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Member Since</label>
                            <input type="text" value="${new Date(currentUser.registrationDate).toLocaleDateString()}" class="w-full px-3 py-2 border rounded-lg bg-gray-50" readonly>
                        </div>
                    </div>
                    
                    <div class="bg-gradient-to-r from-purple-50 to-blue-50 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold mb-4">Account Statistics</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div class="text-center">
                                <div class="text-2xl font-bold text-purple-600">${currentUser.orders ? currentUser.orders.length : 0}</div>
                                <div class="text-gray-600">Total Orders</div>
                            </div>
                            <div class="text-center">
                                <div class="text-2xl font-bold text-green-600">$${currentUser.orders ? currentUser.orders.reduce((sum, order) => sum + order.total, 0).toFixed(2) : '0.00'}</div>
                                <div class="text-gray-600">Total Spent</div>
                            </div>
                            <div class="text-center">
                                <div class="text-2xl font-bold text-blue-600">${Math.floor((Date.now() - new Date(currentUser.registrationDate)) / (1000 * 60 * 60 * 24))}</div>
                                <div class="text-gray-600">Days as Member</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex space-x-4">
                        <button onclick="downloadUserData()" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition">
                            <i class="fas fa-download mr-2"></i>Download My Data
                        </button>
                        <button onclick="showModal('ordersModal')" class="border border-purple-600 text-purple-600 px-6 py-2 rounded-lg hover:bg-purple-50 transition">
                            <i class="fas fa-shopping-bag mr-2"></i>View Orders
                        </button>
                    </div>
                </div>
            `;
        }

        function loadOrdersData() {
            if (!currentUser || !currentUser.orders) return;
            
            const ordersContent = document.getElementById('ordersContent');
            
            if (currentUser.orders.length === 0) {
                ordersContent.innerHTML = `
                    <div class="text-center py-12">
                        <i class="fas fa-shopping-bag text-6xl text-gray-300 mb-4"></i>
                        <h3 class="text-xl font-semibold text-gray-600 mb-2">No Orders Yet</h3>
                        <p class="text-gray-500 mb-6">Start shopping to see your orders here!</p>
                        <button onclick="hideModal('ordersModal'); showSection('home')" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition">
                            Start Shopping
                        </button>
                    </div>
                `;
                return;
            }
            
            const ordersHtml = currentUser.orders.map(order => `
                <div class="border rounded-lg p-6 mb-4">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-lg font-semibold">Order #${order.id}</h3>
                            <p class="text-gray-600">${new Date(order.date).toLocaleDateString()}</p>
                        </div>
                        <div class="text-right">
                            <div class="text-xl font-bold text-purple-600">$${order.total.toFixed(2)}</div>
                            <span class="inline-block px-3 py-1 rounded-full text-sm ${
                                order.status === 'Processing' ? 'bg-yellow-100 text-yellow-800' :
                                order.status === 'Shipped' ? 'bg-blue-100 text-blue-800' :
                                order.status === 'Delivered' ? 'bg-green-100 text-green-800' :
                                'bg-gray-100 text-gray-800'
                            }">${order.status}</span>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <div>
                            <h4 class="font-semibold mb-2">Items (${order.items.length})</h4>
                            <div class="space-y-2">
                                ${order.items.map(item => `
                                    <div class="flex items-center space-x-3">
                                        <span class="text-2xl">${item.image}</span>
                                        <div class="flex-1">
                                            <div class="font-medium">${item.name}</div>
                                            <div class="text-sm text-gray-600">Qty: ${item.quantity} √ó $${item.price}</div>
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                        
                        <div>
                            <h4 class="font-semibold mb-2">Shipping Address</h4>
                            <div class="text-sm text-gray-600">
                                <p>${order.shippingAddress.firstName} ${order.shippingAddress.lastName}</p>
                                <p>${order.shippingAddress.address}</p>
                                <p>${order.shippingAddress.city}, ${order.shippingAddress.state} ${order.shippingAddress.zipCode}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-center pt-4 border-t">
                        <div class="text-sm text-gray-600">
                            Payment: ${order.paymentMethod}
                        </div>
                        <button onclick="downloadOrderConfirmation(${JSON.stringify(order).replace(/"/g, '&quot;')})" class="text-purple-600 hover:text-purple-700 text-sm">
                            <i class="fas fa-download mr-1"></i>Download Receipt
                        </button>
                    </div>
                </div>
            `).join('');
            
            ordersContent.innerHTML = ordersHtml;
        }

        // Navigation functions
        function showSection(section) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(s => s.classList.add('hidden'));
            
            // Show selected section
            const sectionElement = document.getElementById(section + 'Section');
            if (sectionElement) {
                sectionElement.classList.remove('hidden');
                currentSection = section;
                
                // Load products for the section
                if (section !== 'home') {
                    loadSectionProducts(section);
                }
            }
            
            // Close mobile menu
            document.getElementById('mobileMenu').classList.add('hidden');
        }

        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        function toggleDropdown(dropdownId) {
            const dropdown = document.getElementById(dropdownId);
            dropdown.classList.toggle('hidden');
        }

        // Modal functions
        function showModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            // Update checkout totals if it's checkout modal
            if (modalId === 'checkoutModal') {
                updateCheckoutTotals();
            }
            
            // Load profile data if it's profile modal
            if (modalId === 'profileModal') {
                loadProfileData();
            }
            
            // Load orders data if it's orders modal
            if (modalId === 'ordersModal') {
                loadOrdersData();
            }
        }

        function hideModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Product loading functions
        function loadFeaturedProducts() {
            const container = document.getElementById('featuredProducts');
            container.innerHTML = products.featured.map(product => createProductCard(product)).join('');
        }

        function loadSectionProducts(section = currentSection) {
            const container = document.getElementById(section + 'Products');
            if (!container) return;
            
            let productList = [];
            if (section === 'sale') {
                // Show all products with discounts for sale section
                productList = [...products.featured, ...products.men, ...products.women, ...products.kids];
            } else {
                productList = products[section] || [];
            }
            
            container.innerHTML = productList.map(product => createProductCard(product)).join('');
        }

        function createProductCard(product) {
            const discount = Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100);
            const stars = '‚òÖ'.repeat(Math.floor(product.rating)) + '‚òÜ'.repeat(5 - Math.floor(product.rating));
            
            return `
                <div class="product-card bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="relative">
                        <div class="h-48 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center text-6xl cursor-pointer" onclick="showProductDetail(${product.id})">
                            ${product.image}
                        </div>
                        ${discount > 0 ? `<span class="absolute top-2 left-2 bg-red-500 text-white px-2 py-1 rounded text-sm font-bold">-${discount}%</span>` : ''}
                        <button onclick="toggleWishlist(${product.id})" class="absolute top-2 right-2 text-gray-400 hover:text-red-500 text-xl">
                            <i class="far fa-heart"></i>
                        </button>
                    </div>
                    <div class="p-4">
                        <h3 class="font-semibold text-lg mb-2 cursor-pointer hover:text-purple-600" onclick="showProductDetail(${product.id})">${product.name}</h3>
                        <div class="flex items-center mb-2">
                            <span class="text-yellow-400 text-sm">${stars}</span>
                            <span class="text-gray-500 text-sm ml-2">(${product.reviews})</span>
                        </div>
                        <div class="flex items-center justify-between mb-3">
                            <div>
                                <span class="text-xl font-bold text-purple-600">$${product.price}</span>
                                ${product.originalPrice > product.price ? `<span class="text-gray-500 line-through ml-2">$${product.originalPrice}</span>` : ''}
                            </div>
                        </div>
                        <button onclick="addToCart(${product.id})" class="w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition">
                            Add to Cart
                        </button>
                    </div>
                </div>
            `;
        }

        // Product detail function
        function showProductDetail(productId) {
            const product = findProductById(productId);
            if (!product) return;
            
            const modalContent = document.getElementById('productModalContent');
            const modalTitle = document.getElementById('productModalTitle');
            
            modalTitle.textContent = product.name;
            
            const stars = '‚òÖ'.repeat(Math.floor(product.rating)) + '‚òÜ'.repeat(5 - Math.floor(product.rating));
            const discount = Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100);
            
            modalContent.innerHTML = `
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <div class="h-96 bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg flex items-center justify-center text-8xl zoom-image">
                            ${product.image}
                        </div>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold mb-4">${product.name}</h1>
                        <div class="flex items-center mb-4">
                            <span class="text-yellow-400">${stars}</span>
                            <span class="text-gray-500 ml-2">(${product.reviews} reviews)</span>
                        </div>
                        <div class="mb-6">
                            <span class="text-3xl font-bold text-purple-600">$${product.price}</span>
                            ${product.originalPrice > product.price ? `<span class="text-gray-500 line-through ml-3 text-xl">$${product.originalPrice}</span>` : ''}
                            ${discount > 0 ? `<span class="bg-red-500 text-white px-2 py-1 rounded ml-3 text-sm">Save ${discount}%</span>` : ''}
                        </div>
                        
                        <div class="mb-6">
                            <h3 class="font-semibold mb-2">Size:</h3>
                            <div class="flex space-x-2">
                                <button class="border border-gray-300 px-3 py-2 rounded hover:border-purple-600 hover:text-purple-600">XS</button>
                                <button class="border border-gray-300 px-3 py-2 rounded hover:border-purple-600 hover:text-purple-600">S</button>
                                <button class="border border-gray-300 px-3 py-2 rounded hover:border-purple-600 hover:text-purple-600">M</button>
                                <button class="border border-gray-300 px-3 py-2 rounded hover:border-purple-600 hover:text-purple-600">L</button>
                                <button class="border border-gray-300 px-3 py-2 rounded hover:border-purple-600 hover:text-purple-600">XL</button>
                            </div>
                        </div>
                        
                        <div class="mb-6">
                            <h3 class="font-semibold mb-2">Color:</h3>
                            <div class="flex space-x-2">
                                <button class="w-8 h-8 bg-black rounded-full border-2 border-gray-300 hover:border-purple-600"></button>
                                <button class="w-8 h-8 bg-white rounded-full border-2 border-gray-300 hover:border-purple-600"></button>
                                <button class="w-8 h-8 bg-blue-500 rounded-full border-2 border-gray-300 hover:border-purple-600"></button>
                                <button class="w-8 h-8 bg-red-500 rounded-full border-2 border-gray-300 hover:border-purple-600"></button>
                            </div>
                        </div>
                        
                        <div class="mb-6">
                            <h3 class="font-semibold mb-2">Quantity:</h3>
                            <div class="flex items-center space-x-3">
                                <button onclick="changeQuantity(-1)" class="border border-gray-300 px-3 py-2 rounded hover:bg-gray-100">-</button>
                                <span id="quantity" class="px-4 py-2 border border-gray-300 rounded">1</span>
                                <button onclick="changeQuantity(1)" class="border border-gray-300 px-3 py-2 rounded hover:bg-gray-100">+</button>
                            </div>
                        </div>
                        
                        <div class="space-y-3">
                            <button onclick="addToCart(${product.id}); hideModal('productModal')" class="w-full bg-purple-600 text-white py-3 rounded-lg hover:bg-purple-700 transition font-semibold">
                                Add to Cart
                            </button>
                            <button class="w-full border border-purple-600 text-purple-600 py-3 rounded-lg hover:bg-purple-50 transition font-semibold">
                                Add to Wishlist
                            </button>
                        </div>
                        
                        <div class="mt-8">
                            <h3 class="font-semibold mb-3">Product Details:</h3>
                            <ul class="text-gray-600 space-y-1">
                                <li>‚Ä¢ Premium quality materials</li>
                                <li>‚Ä¢ Comfortable fit</li>
                                <li>‚Ä¢ Machine washable</li>
                                <li>‚Ä¢ Available in multiple sizes</li>
                                <li>‚Ä¢ 30-day return policy</li>
                            </ul>
                        </div>
                        
                        <div class="mt-6 p-4 bg-green-50 rounded-lg">
                            <div class="flex items-center text-green-600">
                                <i class="fas fa-truck mr-2"></i>
                                <span class="font-semibold">Free shipping on orders over $50</span>
                            </div>
                            <div class="flex items-center text-green-600 mt-1">
                                <i class="fas fa-undo mr-2"></i>
                                <span>Easy 30-day returns</span>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            showModal('productModal');
        }

        function changeQuantity(change) {
            const quantityElement = document.getElementById('quantity');
            let quantity = parseInt(quantityElement.textContent);
            quantity = Math.max(1, quantity + change);
            quantityElement.textContent = quantity;
        }

        // Cart functions
        function addToCart(productId) {
            const product = findProductById(productId);
            if (!product) return;
            
            const existingItem = cart.find(item => item.id === productId);
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({...product, quantity: 1});
            }
            
            updateCartCount();
            updateCartDisplay();
            
            // Show success message
            showNotification('Product added to cart!', 'success');
        }

        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            updateCartCount();
            updateCartDisplay();
        }

        function updateCartQuantity(productId, newQuantity) {
            const item = cart.find(item => item.id === productId);
            if (item) {
                if (newQuantity <= 0) {
                    removeFromCart(productId);
                } else {
                    item.quantity = newQuantity;
                    updateCartCount();
                    updateCartDisplay();
                }
            }
        }

        function updateCartCount() {
            const count = cart.reduce((total, item) => total + item.quantity, 0);
            document.getElementById('cartCount').textContent = count;
        }

        function updateCartDisplay() {
            const cartItems = document.getElementById('cartItems');
            const cartTotal = document.getElementById('cartTotal');
            
            if (cart.length === 0) {
                cartItems.innerHTML = '<p class="text-gray-500 text-center py-8">Your cart is empty</p>';
                cartTotal.classList.add('hidden');
                return;
            }
            
            cartTotal.classList.remove('hidden');
            
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            document.getElementById('totalAmount').textContent = total.toFixed(2);
            
            cartItems.innerHTML = cart.map(item => `
                <div class="flex items-center space-x-4 py-4 border-b">
                    <div class="text-3xl">${item.image}</div>
                    <div class="flex-1">
                        <h3 class="font-semibold">${item.name}</h3>
                        <p class="text-gray-600">$${item.price}</p>
                    </div>
                    <div class="flex items-center space-x-2">
                        <button onclick="updateCartQuantity(${item.id}, ${item.quantity - 1})" class="border px-2 py-1 rounded">-</button>
                        <span class="px-3">${item.quantity}</span>
                        <button onclick="updateCartQuantity(${item.id}, ${item.quantity + 1})" class="border px-2 py-1 rounded">+</button>
                    </div>
                    <button onclick="removeFromCart(${item.id})" class="text-red-500 hover:text-red-700">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            `).join('');
        }

        function updateCheckoutTotals() {
            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const total = subtotal + 5.99; // Adding shipping
            
            document.getElementById('checkoutSubtotal').textContent = subtotal.toFixed(2);
            document.getElementById('checkoutTotal').textContent = total.toFixed(2);
        }

        // Utility functions
        function findProductById(id) {
            const allProducts = [...products.featured, ...products.men, ...products.women, ...products.kids];
            return allProducts.find(product => product.id === id);
        }

        function toggleWishlist(productId) {
            // Wishlist functionality would be implemented here
            showNotification('Added to wishlist!', 'success');
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg text-white font-semibold ${
                type === 'success' ? 'bg-green-500' : 
                type === 'error' ? 'bg-red-500' : 'bg-blue-500'
            }`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        function processOrder(event) {
            event.preventDefault();
            
            if (!currentUser) {
                showNotification('Please login to place an order!', 'error');
                hideModal('checkoutModal');
                showModal('loginModal');
                return;
            }
            
            // Create order
            const order = {
                id: Date.now(),
                date: new Date().toISOString(),
                items: [...cart],
                total: cart.reduce((sum, item) => sum + (item.price * item.quantity), 0) + 5.99,
                status: 'Processing',
                shippingAddress: {
                    firstName: event.target.querySelector('input[type="text"]').value,
                    lastName: event.target.querySelectorAll('input[type="text"]')[1].value,
                    email: event.target.querySelector('input[type="email"]').value,
                    address: event.target.querySelectorAll('input[type="text"]')[2].value,
                    city: event.target.querySelectorAll('input[type="text"]')[3].value,
                    state: event.target.querySelectorAll('input[type="text"]')[4].value,
                    zipCode: event.target.querySelectorAll('input[type="text"]')[5].value
                },
                paymentMethod: event.target.querySelector('select').value
            };
            
            // Add order to user's order history
            const userIndex = users.findIndex(u => u.id === currentUser.id);
            if (userIndex !== -1) {
                users[userIndex].orders.push(order);
                localStorage.setItem('stylehub_users', JSON.stringify(users));
                
                // Update current user
                currentUser.orders = users[userIndex].orders;
                localStorage.setItem('stylehub_current_user', JSON.stringify(currentUser));
            }
            
            // Simulate order processing
            hideModal('checkoutModal');
            hideModal('cartModal');
            
            // Clear cart
            cart = [];
            updateCartCount();
            updateCartDisplay();
            
            showNotification('Order placed successfully! You will receive a confirmation email shortly.', 'success');
            
            // Download order confirmation
            downloadOrderConfirmation(order);
        }

        function downloadOrderConfirmation(order) {
            const orderData = {
                'Order Confirmation': '',
                'Order ID': order.id,
                'Order Date': new Date(order.date).toLocaleDateString(),
                'Customer Name': `${order.shippingAddress.firstName} ${order.shippingAddress.lastName}`,
                'Email': order.shippingAddress.email,
                'Total Amount': `$${order.total.toFixed(2)}`,
                'Status': order.status,
                '': '',
                'Shipping Address': '',
                'Address': order.shippingAddress.address,
                'City': order.shippingAddress.city,
                'State': order.shippingAddress.state,
                'ZIP Code': order.shippingAddress.zipCode,
                ' ': '',
                'Order Items': ''
            };
            
            // Add items
            order.items.forEach((item, index) => {
                orderData[`Item ${index + 1}`] = item.name;
                orderData[`Quantity ${index + 1}`] = item.quantity;
                orderData[`Price ${index + 1}`] = `$${item.price}`;
                orderData[`Subtotal ${index + 1}`] = `$${(item.price * item.quantity).toFixed(2)}`;
            });
            
            // Create CSV content
            const csvContent = Object.entries(orderData)
                .map(([key, value]) => `${key},${value}`)
                .join('\n');
            
            // Create and download file
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `StyleHub_Order_${order.id}_${Date.now()}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.relative')) {
                document.querySelectorAll('[id$="Dropdown"]').forEach(dropdown => {
                    dropdown.classList.add('hidden');
                });
            }
        });

        // Close modals when clicking outside
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', function(event) {
                if (event.target === modal) {
                    modal.classList.remove('active');
                    document.body.style.overflow = 'auto';
                }
            });
        });
    </script>
